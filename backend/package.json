{
  "name": "slots-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node --test --test-concurrency=1 dist/tests",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "openapi:generate": "npm run build && node dist/scripts/openapi.js",
    "openapi:check": "npm run build && node dist/scripts/openapi.js --check",
    "jwt:generate": "node scripts/generate-rs256-jwt.mjs",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prepare": "git rev-parse --is-inside-work-tree > /dev/null 2>&1 && cd .. && git config core.hooksPath .githooks || true"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.1",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.6",
    "express": "^4.21.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0"
  }
}
