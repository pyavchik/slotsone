{
  "name": "slots-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "api:types:generate": "openapi-typescript ../backend/openapi.json -o src/generated/openapi.ts",
    "api:types:check": "npm run api:types:generate && git diff --exit-code -- src/generated/openapi.ts",
    "preview": "vite preview",
    "prepare": "git rev-parse --is-inside-work-tree > /dev/null 2>&1 && cd .. && git config core.hooksPath .githooks || true"
  },
  "dependencies": {
    "pixi.js": "^8.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.3",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
